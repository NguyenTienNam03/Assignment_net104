@model Product

@{
    ViewData["Title"] = "ProductDetail";

}
<style>
    span {
        display: inline-block;
        width: 120px;
        height: 70px;
        margin: 6px;
        background-color: #f9f9f9;
    }
</style>
<div style="height: 1000px;">
    <br />
    <dl class="row">
        @*<dt class = "col-sm-2">
        @Html.DisplayNameFor(model => model.ID)
        </dt>
        <dd class = "col-sm-10">
        @Html.DisplayFor(model => model.ID)
        </dd>*@
        <div class="row">
            <div class="col-4">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">
                            <h3 class="text-center">@Html.DisplayFor(model => model.NameProduct)</h3>
                        </div>
                    </div>
                    <div class="card-body" style="padding: auto;">
                        <img src="/images/@Model.Image?v=Kl_dqr9NVtnMdsM2MUg4qthUnWZm5T1fCEimBPWDNgM" width="200px" height="200px">
                    </div>
                    <div class="card-footer">
                        <h4 class="text-center">Đặc điểm sản phẩm</h4>
                        <p>@Html.DisplayFor(model => model.Features)</p>

                    </div>
                </div>
            </div>
            <div class="col-4">
                <span class="border">
                    <p class="text-center">
                        @Html.DisplayFor(model => model.Capacity.Description)
                    </p>
                    <p class="text-center">
                        @Html.DisplayFor(model => model.Price) VND
                    </p>
                </span>
                <p>
                    Color
                </p>
                <p class="border" style="width: 50px; height:50px; background-color: @Model.Color;">
                </p>
                <p>
                    <a href="@Url.Action("AddToCart",new { id = Model.ID})" class="btn btn-success">Đặt hàng</a>
                </p>
            </div>
            <div class="col-4">
                <div class="card">
                    <div class="card-title" style="padding:10px;">
                        <strong>
                            <p>
                                Thông tin sản phẩm
                            </p>
                        </strong>
                        <p>
                            @Html.Raw(Model.Description)
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </dl>
</div>
<div style="margin-top:20px;">
    @Html.ActionLink("Edit", "Update", new {id = Model.ID }) |
    <a asp-controller="Home" asp-action="Index">Back to List</a>
</div>
