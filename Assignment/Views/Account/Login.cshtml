@model Assignment.Models.Data.User

<style>
    form {
        border: 2px solid black;
        
        margin : auto;
        margin-top : 30px;
        width : 450px;
        padding : 15px;
    }
    .form-group {
        margin : 5px;
        padding : 5px;
    }
    .form-group label {
        font-size : 20px;
        font-family : 'Times New Roman';
    }
    .form-control {
        padding : 2px;
        height : 30px;
        margin : 2px;
        line-height : 10px;
    }
    .form-control input {
        height : 25px;
        font-size : 18px;
        color : black;

    }
    .form-group .btn {
        margin: auto ;
        padding : 7px;
        height : 50px;
        width : 100px;
        font-size : 25px;
    }

</style>
@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.ErrorMessage
    </div>
}
@if (ViewBag.ErrorMail != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.ErrorMail
    </div>
}
@if (ViewBag.Error != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.Error
    </div>
}
